
# Cassandra Client Connection
 INPUT -p tcp -m state --state NEW -m tcp --dport 9160 -j ACCEPT

# Cassandra InterNode Connection
 INPUT -p tcp -m state --state NEW -m tcp --dport 7000 -j ACCEPT

